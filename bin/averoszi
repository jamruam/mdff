#!/bin/bash
# ===============================================================
# date       : 21 maio 2013 15h53
# author     : fmv
# decription : convert POSCAR (vasp) to POSFF (mdff)
# ===============================================================
separetor="=========================================================="
USAGE="Usage: -i [inputfile] -l [n_last_steps] -n <0 or 1>"

no=0
if [ $# -eq 0 ]
then
    echo "$USAGE"
    exit 1
fi
while getopts ":i:l:n:" opt
do
    case $opt in
        i)
            osziff="$OPTARG"
            ;;
        l)
            last="$OPTARG"
            ;;
        n)
            no="$OPTARG"
            ;;
        \?)
            echo "Invalid option: -$OPTARG" >&2
            exit 1
            ;;
        :)
            echo "Option -$OPTARG requires an argument." >&2
            exit 1
            ;;
    esac
done
if [ $no -eq 0 ];
then
	echo $separetor
	date
	echo "author : filipe.manuel.vasconcelos@gmail.com"
	echo $separetor
	echo "Running averoszi ..."
	echo "This script calculate simple average value along OSZIFF file"
fi

echo "generate etot and temp files"
echo ""
grep Etot $osziff > etot
grep Temp $osziff > temp
npoints=`wc etot | awk '{print $1}'`
echo "$npoints points in input file $osziff"
if [ -z "$last" ];
then
	last=$npoints
fi 
tail -n $last etot > etot_l
tail -n $last temp > temp_l

echo ""
echo "averaging on $last last points:"
echo ""
awk -v np=$last     'BEGIN  { sum_etot=0        ; sum_ekin=0          ; sum_utot=0          ; sum_ulj=0           ; sum_ucoul=0          ; sum_umorse=0    ; 
                              sum_etot_2=0      ; sum_ekin_2=0        ; sum_utot_2=0        ; sum_ulj_2=0         ; sum_ucoul_2=0        ; sum_umorse_2=0  } 
                            { sum_etot+=$9      ; sum_ekin+=$12       ; sum_utot+=$15       ; sum_ulj+=$18        ; sum_ucoul+=$21       ; sum_umorse+=$24 ; 
                              sum_etot_2+=$9*$9 ; sum_ekin_2+=$12*$12 ; sum_utot_2+=$15*$15 ; sum_ulj_2+=$18*$18  ; sum_ucoul_2+=$21*$21 ; sum_umorse_2+=$24*$24 } 
                      END   { printf(" %15s %16.8e %15s %12.5e %15s %16.8e\n %15s %16.8e %15s %12.5e %15s %16.8e\n %15s %16.8e %15s %12.5e %15s %16.8e\n %15s %16.8e %15s %12.5e %15s %16.8e\n %15s %16.8e %15s %12.5e %15s %16.8e\n %15s %16.8e %15s %12.5e %15s %16.8e\n",     
                             "<Etot>   =" ,sum_etot/np   ,"<Etot^2>   =" ,sum_etot_2/np  ,"std dev.=",sqrt((sum_etot_2/np)-(sum_etot/np)^2),
                             "<Ekin>   =" ,sum_ekin/np   ,"<Ekin^2>   =" ,sum_ekin_2/np  ,"std dev.=",sqrt((sum_ekin_2/np)-(sum_ekin/np)^2),
                             "<Upot>   =" ,sum_utot/np   ,"<Upot^2>   =" ,sum_utot_2/np  ,"std dev.=",sqrt((sum_utot_2/np)-(sum_utot/np)^2),
                             "<Ulj>    =" ,sum_ulj/np    ,"<Ulj^2>    =" ,sum_ulj_2/np   ,"std dev.=",sqrt((sum_ulj_2/np)-(sum_ulj/np)^2),
                             "<Ucoul>  =" ,sum_ucoul/np  ,"<Ucoul^2>  =" ,sum_ucoul_2/np ,"std dev.=",sqrt((sum_ucoul_2/np)-(sum_ucoul/np)^2),
                             "<Umorse> =" ,sum_umorse/np ,"<Umorse^2> =" ,sum_umorse_2/np,"std dev.=",sqrt((sum_umorse_2/np)-(sum_umorse/np)^2) ) }' etot_l

awk -v np=$last     'BEGIN  { sum_temp=0        ; sum_press=0          ; sum_Plj=0          ; sum_Pcoul=0          ; sum_volume=0          ; sum_htot =0         ; 
                              sum_temp_2=0      ; sum_press_2=0        ; sum_Plj_2=0        ; sum_Pcoul_2=0        ; sum_volume_2=0        ; sum_htot_2=0        } 
                            { sum_temp+=$9      ; sum_press+=$12       ; sum_Plj+=$15       ; sum_Pcoul+=$18       ; sum_volume+=$21       ; sum_htot+=$24       ;
                              sum_temp_2+=$9*$9 ; sum_press_2+=$12*$12 ; sum_Plj_2+=$15*$15 ; sum_Pcoul_2+=$18*$18 ; sum_volume_2+=$21*$21 ; sum_htot_2+=$24*$24 } 
                      END   { printf(" %15s %16.8e %15s %12.5e %15s %16.8e\n %15s %16.8e %15s %12.5e %15s %16.8e\n %15s %16.8e %15s %12.5e %15s %16.8e\n %15s %16.8e %15s %12.5e %15s %16.8e\n %15s %16.8e %15s %12.5e %15s %16.8e \n %15s %16.8e %15s %12.5e %15s %16.8e\n", 
                             "<Temp>   =" ,sum_temp/np   ,"<Temp^2>   =",sum_temp_2/np     ,"std dev.=",sqrt((sum_temp_2/np)-(sum_temp/np)^2),
                             "<Press>  =" ,sum_press/np  ,"<Press^2>  =",sum_press_2/np    ,"std dev.=",sqrt((sum_Press_2/np)-(sum_Press/np)^2),
                             "<Plj>    =" ,sum_Plj/np    ,"<Plj^2>    =",sum_Plj_2/np      ,"std dev.=",sqrt((sum_Plj_2/np)-(sum_Plj/np)^2),
                             "<Pcoul>  =" ,sum_Pcoul/np  ,"<Pcoul^2>  =",sum_Pcoul_2/np    ,"std dev.=",sqrt((sum_Pcoul_2/np)-(sum_Pcoul/np)^2),
                             "<vol>    =" ,sum_volume/np ,"<vol^2>    =",sum_volume_2/np   ,"std dev.=",sqrt((sum_volume_2/np)-(sum_volume/np)^2),      
                             "<Htot>   =" ,sum_htot/np   ,"<Htot^2>   =",sum_htot_2/np     ,"std dev.=",sqrt((sum_htot_2/np)-(sum_htot/np)^2) )    }' temp_l

if [ $no -eq 0 ];
then
	echo $separetor
fi
exit 0;

